# Production Environment Variables Template
# Copy to .env and fill with actual values

# Application
APP_NAME=Sales Analytics API v2
APP_VERSION=2.0.0
DEBUG=false
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000

# Sentos API Configuration
SENTOS_API_URL=https://stildiva.sentos.com.tr/api
SENTOS_API_KEY=your-sentos-api-key
SENTOS_API_SECRET=your-sentos-api-secret
SENTOS_COOKIE=your-sentos-cookie

# Database (Render PostgreSQL URL will be auto-injected)
DATABASE_URL=postgresql://user:password@host:5432/database

# Security
API_KEY=your-secret-api-key-change-this-in-production

# CORS
ALLOWED_ORIGINS=*
